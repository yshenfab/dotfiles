# Fetch mail shortcut
bind index G imap-fetch-mail

# urlview
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'

# other config
set editor="emacs -nw"
# +:唯一收件人, T:收件人之一, C:cc给你的, L:邮件列表发来的
set to_chars="+TCFL"
# 回信时引用原文是否加入原文的邮件头
set header=no
# 那些类型的附件是允许直接通过.mailcap浏览的
auto_view text/plain
#auto_view text/html
# 当你退出时，是否提示你把信件从spool移动到的mbox文件
set move=no
# 当Mutt用thread方式显示时，是否用纯ascii表示树状列表
set ascii_chars=yes
# 回信是否包含原文
set include
# 回信的引文之前插入那个符号
set indent_str="> "
# 设置邮件头
# my_hdr From: yshenfab@gmail.com
# 打分：新信件+4分，主题包含CFP的+2分，已经标记删除的-5分，上次没读的+1，包含ad的-10（垃圾广告）
score "~N" +4
score "~s CFP" +2
score "~D" -5
score "~O" +1
score "~s believe" -10
# sort排序方式，可以是date, date-sent, date-received, from, mailbox-order, score, size, subject, threads, to
set sort=score
# 当用thread排序方式时，对各个thread的相对排序顺序
set sort_aux=date
# 如果设置，那么你在pager(就是你看信的内容的窗口里)翻页时，如果翻到最后，再按往下翻也不会翻到下一封信件。如果不设置就会自动翻到下一封信
set pager_stop
# 如果设置，当你按"r"回信时，就不会再提示你输入回信地址和主题，直接进入编辑模式
set fast_reply
# 当你按"t"或者"D"之类的标记操作时，是否自动把光标移动到下一封信件
set resolve=yes
# 你发出的邮件按月保存在不同的文件里
#set record="~/Mail/=sent-mail-`date +%Y-%m`"
# 终端编码显示，必须和终端编码一样
# set charset="gb2312"
#set charset="utf-8"
#set rfc2047_parameters=yes
#set envelope_from=yes
#set use_from=yes
# 发信时可以使用的字符集
#set send_charset="us-ascii:gb2312:utf-8"
# 当外部程序退出时，是否要求用户按一个键才返回。这在察看某些shell命令输出时是比要的，否则它们一下就消失了
set wait_key=yes
# 当你要把信件存到另一个信箱，而这个信箱已经存在时，是否提示附加
set noconfirmappend
# 是否把邮件头也放在编辑器里可以修改
set edit_headers=no
# 当你在用pager看信件时，在index留出多少行显示邮件列表
set pager_index_lines=7
# 使用solarized配色方案
source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-dark-256.muttrc