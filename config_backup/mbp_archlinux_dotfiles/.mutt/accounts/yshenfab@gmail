source "gpg -d ~/.mutt/accounts/yshenfab@gmail.gpg |"

# gmail login with mutt
set imap_user="yshenfab@gmail.com"

# smtp server to send mail
set smtp_url="smtp://yshenfab@smtp.gmail.com:587"
# set smtp_pass="$imap_pass"

set sendmail="/usr/bin/msmtp -a yshenfab@gmail.com"

# email header and address
set from="yshen@gmail.com"
set realname="Yang"

# email server folder
set folder="imaps://imap.gmail.com:993"
set spoolfile="+INBOX"
set postponed="+[Gmail]/Drafts"
# set signature="~/.mutt/mysignature"

# local cache
set header_cache=~/.mutt/cache/yshenfab.gmail/headers
set message_cachedir=~/.mutt/cache/yshenfab.gmail/bodies

# TLS cert
set certificate_file=/etc/ssl/certs/ca-certificates.crt

