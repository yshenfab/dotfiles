        # tray_output primary
        status_command ~/.config/i3/bumblebee-status/bumblebee-status -m cpu memory disk:root pasink caffeine date time -p root.path=/home/yang time.format="%H:%M" time.locale="en_US.UTF-8" -t solarized-powerline
        # status_command ~/.config/i3/bumblebee-status/bumblebee-status -m cpu memory disk:root pasink bluetooth2 date time -p root.path=/home/yang time.format="%H:%M" time.locale="en_US.UTF-8" -t solarized-powerline
        colors {
            background $bg-color
            separator #757575
            #                  border             background         text
            focused_workspace  $bg-color          $bg-color          $text-color
            inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
            urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        }
}

