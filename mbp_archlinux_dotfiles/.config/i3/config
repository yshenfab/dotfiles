# shut down, restart and locking features (requires i3exit script in /usr/bin)
bindsym $mod+Delete mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec i3lock -i $HOME/Pictures/wallpaper/arch.png -t
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown -h now, mode "default"

    # exit system mode: "Enter" or "Escape"
    #bindsym Return mode "default" exec i3lock -i $HOME/pic/wallpaper/leon.png
    bindsym Escape mode "default"
}

# display mode for multiple monitors
set $displayMode "Set display mode [m]acbook [e]xternal [b]oth"
bindsym $mod+m mode $displayMode
mode $displayMode {
    bindsym m exec "\
                ~/.config/i3/xrandr/mac_retina_display.sh"; \
                mode "default"
    bindsym e exec "\
                ~/.config/i3/xrandr/lg29_display.sh"; \
                mode "default"
    bindsym b exec "\
                ~/.config/i3/xrandr/double_display.sh"; \
                mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

