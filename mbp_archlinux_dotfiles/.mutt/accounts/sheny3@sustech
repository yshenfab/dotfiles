source "gpg -d ~/.mutt/accounts/sheny3@sustech.gpg |"

set imap_user="sheny3@mail.sustech.edu.cn"
# smtp server to send mail
#set smtp_url="smtp://sheny3@smtp.exmail.qq.com:587"
set smtp_url="smtp://sheny3@mail.sustech.edu.cn@smtp.exmail.qq.com:587"
#set smtp_url="smtps://sheny3@smtp.exmail.qq.com:465"

set sendmail="/usr/bin/msmtp -a sheny3@mail.sustech.edu.cn"

# email header and address
set from="sheny3@mail.sustech.edu.cn"
set realname="Yang"

# email server folder
set folder="imaps://imap.exmail.qq.com:993"
set spoolfile="+INBOX"
set postponed="+[Gmail]/Drafts"

# local cache
set header_cache=~/.mutt/cache/sheny3.sustech/headers
set message_cachedir=~/.mutt/cache/sheny3.sustech/bodies

# TLS cert
set certificate_file=/etc/ssl/certs/ca-certificates.crt

